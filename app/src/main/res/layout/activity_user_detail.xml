<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvCaptioname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="208dp"
        android:text="@string/str_second_caption_name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvUsername"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/uiTvCaptioname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/uiTvCaptioname" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvCaptionEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/str_second_caption_email"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/uiTvCaptioname"
        app:layout_constraintStart_toStartOf="@+id/uiTvCaptioname"
        app:layout_constraintTop_toBottomOf="@+id/uiTvCaptioname" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvUseremail"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/uiTvCaptionEmail"
        app:layout_constraintEnd_toEndOf="@+id/uiTvUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uiTvUsername"
        app:layout_constraintTop_toTopOf="@+id/uiTvCaptionEmail"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvCaptioPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/str_second_caption_password"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/uiTvCaptionEmail"
        app:layout_constraintStart_toStartOf="@+id/uiTvCaptionEmail"
        app:layout_constraintTop_toBottomOf="@+id/uiTvCaptionEmail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvUserpassword"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/uiTvCaptioPassword"
        app:layout_constraintEnd_toEndOf="@+id/uiTvUseremail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uiTvUseremail"
        app:layout_constraintTop_toTopOf="@+id/uiTvCaptioPassword"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvCaptionGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/str_second_caption_gender"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/uiTvCaptioPassword"
        app:layout_constraintStart_toStartOf="@+id/uiTvCaptioPassword"
        app:layout_constraintTop_toBottomOf="@+id/uiTvCaptioPassword" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvUserGender"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/uiTvCaptionGender"
        app:layout_constraintEnd_toEndOf="@+id/uiTvUserpassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uiTvUserpassword"
        app:layout_constraintTop_toTopOf="@+id/uiTvCaptionGender"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uiTvCaptionGender" />


</androidx.constraintlayout.widget.ConstraintLayout>